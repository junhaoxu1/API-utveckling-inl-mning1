generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id                    Int         @id @default(autoincrement()) @db.UnsignedInt
  name                  String
  description           String
  price                 Int
  images                Json        @default("{}")
  stock_status          String
  stock_quantity        Int
  orders                Order[]
  OrderItem             OrderItems  @relation(fields: [productId], references: [product_id])  
}

model Order {
  id                    Int   @id @default(autoincrement()) @db.UnsignedInt
  customer_first_name   String    
  customer_last_name    String
  customer_address      String
  customer_city         String
  customer_postcode     String
  customer_email        String
  customer_phone        String?
  order_total           Int
  products              Product[]
}

model OrderItems {
  product_id            Int   @id @default(autoincrement()) @db.UnsignedInt
  qty                   Int
  item_price            Int
  item_total            Int
  products              Product[]
}
